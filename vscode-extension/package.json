{
  "publisher": "BrettYoung",
  "name": "codeweave",
  "displayName": "CodeWeave",
  "description": "Visualize and restore Weave trace runs inside VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cdweave-sidebar",
          "title": "CodeWeave",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "cdweave-sidebar": [
        {
          "id": "cdweaveTraceTree",
          "name": "Trace Runs"
        },
        {
          "id": "cdweaveAllTraces",
          "name": "Selected Traces"
        },
        {
          "id": "cdweaveTraceDetail",
          "name": "Trace Detail"
        }
      ]
    },
    "commands": [
      {
        "command": "cdweave.selectTrace",
        "title": "Select CDWeave Trace"
      },
      {
        "command": "cdweave.clearFocus",
        "title": "CDWeave: Clear Highlight"
      },
      {
        "command": "cdweave.openTraceUrl",
        "title": "Open in Weave",
        "icon": "$(link-external)"
      },
      {
        "command": "cdweave.restoreRunCode",
        "title": "Restore run code",
        "icon": "$(history)"
      },
      {
        "command": "cdweave.restoreMainCode",
        "title": "Back to HEAD",
        "icon": "$(discard)"
      }
    ],
    "keybindings": [
      {
        "command": "cdweave.clearFocus",
        "key": "escape",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cdweave.openTraceUrl",
          "when": "view =~ /cdweaveTraceTree|cdweaveAllTraces/ && viewItem == traceCallWithUrl",
          "group": "inline"
        },
        {
          "command": "cdweave.restoreRunCode",
          "when": "view == cdweaveTraceTree && viewItem == traceRunWithSnapshot",
          "group": "inline@1"
        },
        {
          "command": "cdweave.restoreMainCode",
          "when": "view == cdweaveTraceTree && viewItem == traceRunWithSnapshot",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
